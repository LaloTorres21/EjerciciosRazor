@page
@model IntroduccionRazor.Pages.ProgramaIMCModel
@{
}

<h3>Cálculo del Índice de Masa Corporal</h3>

<form method="post">
    <p>Peso (kg): <input type="number" step="0.01" asp-for="peso" /></p>
    <p>Altura (cm): <input type="number" step="0.01" asp-for="altura" /></p>
    <p><input type="submit" value="Calcular" /></p>
</form>

@if (Model.imc > 0)
{
    <div>
        <h3>El IMC es: @Model.imc.ToString("F2")</h3>
        <p>Clasificación: <strong>@Model.clasificacion</strong></p>
        <img src="@Model.imagen" alt="Resultado IMC" width="200" />
    </div>
}